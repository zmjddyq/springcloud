<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.atguigu.springcloud.dao.AccountDao">

    <resultMap type="com.atguigu.springcloud.pojo.Account" id="TAccountMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="userId" column="user_id" jdbcType="INTEGER"/>
        <result property="total" column="total" jdbcType="NUMERIC"/>
        <result property="used" column="used" jdbcType="NUMERIC"/>
        <result property="residue" column="residue" jdbcType="NUMERIC"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="TAccountMap">
        select
          id, user_id, total, used, residue
        from seata_account.t_account
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="TAccountMap">
        select
          id, user_id, total, used, residue
        from seata_account.t_account
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="TAccountMap">
        select
          id, user_id, total, used, residue
        from seata_account.t_account
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="userId != null">
                and user_id = #{userId}
            </if>
            <if test="total != null">
                and total = #{total}
            </if>
            <if test="used != null">
                and used = #{used}
            </if>
            <if test="residue != null">
                and residue = #{residue}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into seata_account.t_account(user_id, total, used, residue)
        values (#{userId}, #{total}, #{used}, #{residue})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update seata_account.t_account
        <set>
            <if test="userId != null">
                user_id = #{userId},
            </if>
            <if test="total != null">
                total = #{total},
            </if>
            <if test="used != null">
                used = #{used},
            </if>
            <if test="residue != null">
                residue = #{residue},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from seata_account.t_account where id = #{id}
    </delete>

    <!--  扣减账户余额  -->
    <update id="decrease">
        UPDATE t_account
        SET
          residue = residue - #{money},used = used + #{money}
        WHERE
          user_id = #{userId};
    </update>

</mapper>