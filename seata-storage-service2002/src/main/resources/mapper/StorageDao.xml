<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.atguigu.springcloud.dao.StorageDao">

    <resultMap type="com.atguigu.springcloud.pojo.Storage" id="TStorageMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="productId" column="product_id" jdbcType="INTEGER"/>
        <result property="total" column="total" jdbcType="INTEGER"/>
        <result property="used" column="used" jdbcType="INTEGER"/>
        <result property="residue" column="residue" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="TStorageMap">
        select
          id, product_id, total, used, residue
        from seata_storage.t_storage
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="TStorageMap">
        select
          id, product_id, total, used, residue
        from seata_storage.t_storage
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="TStorageMap">
        select
          id, product_id, total, used, residue
        from seata_storage.t_storage
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="productId != null">
                and product_id = #{productId}
            </if>
            <if test="total != null">
                and total = #{total}
            </if>
            <if test="used != null">
                and used = #{used}
            </if>
            <if test="residue != null">
                and residue = #{residue}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into seata_storage.t_storage(product_id, total, used, residue)
        values (#{productId}, #{total}, #{used}, #{residue})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update seata_storage.t_storage
        <set>
            <if test="productId != null">
                product_id = #{productId},
            </if>
            <if test="total != null">
                total = #{total},
            </if>
            <if test="used != null">
                used = #{used},
            </if>
            <if test="residue != null">
                residue = #{residue},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from seata_storage.t_storage where id = #{id}
    </delete>


    <!-- 减库存
     void decrease(@Param("productId") Long productId, @Param("count") Integer count);  -->
    <update id="decrease">
        UPDATE
            seata_storage.t_storage
        SET
            used = used + #{count},residue = residue - #{count}
        WHERE
            product_id = #{productId}
    </update>

</mapper>